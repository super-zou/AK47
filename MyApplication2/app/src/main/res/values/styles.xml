<resources>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/mcv_text_date_light</item>
        <item name="fontFamily">@font/shirkhand</item>
    </style>

    <style name="CustomDateAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/mcv_text_date_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
    </style>

    <!--+Begin: add for RadioButton color by zouhaichao, 2018.11.27-->
    <style name="MyRadioButton" parent="@android:style/Widget.Material.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">@color/color_light_grey</item>
        <item name="android:colorControlActivated">@color/color_blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--+End: add for checkbox color by zouhaichao, 2018.11.27-->

    <!--+Begin: add for edittext color by zouhaichao, 2019.1.12-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/line_border</item>
        <item name="colorControlActivated">@color/line_border</item>
    </style>

    <style name="EditTextCustom" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_dark_disabled</item>
        <item name="colorControlActivated">@color/color_dark_disabled</item>
        <item name="android:textColor">@color/color_dark_disabled</item>
    </style>

    <style name="HintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/disabled</item>
    </style>

    <style name="HintErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_red</item>
        <!-- <item name="textColorError">@color/color_red</item> -->
    </style>

    <style name="TextErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@color/color_red</item>
        <!-- <item name="textColorError">@color/color_red</item> -->
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--+End: add for edittext color by zouhaichao, 2019.1.12-->

    <!--图片选择器，仿微信样式，注意每一项都不能少-->
    <style name="picture.WeChat.style" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/color_light_grey</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/color_light_grey</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/picture_icon_close</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/picture_icon_wechat_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/picture_icon_wechat_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/white</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/white</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_wechat_num_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_light_grey</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/color_light_grey</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/color_light_grey</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval_blue</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/white</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/color_light_grey</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/color_light_grey</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/picture_icon_back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/color_light_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/color_light_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/color_light_grey</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/picture_orange_oval</item>
    </style>

    <!--QQ数字风格样式，注意每一项都不能少-->
    <style name="picture.QQ.style" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/blue_dark</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/picture_icon_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/picture_icon_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/picture_icon_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/white</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/white</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_wechat_num_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_light_grey</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/blue</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/blue</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval_blue</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/blue</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/blue</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/color_light_grey</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/picture_icon_back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/blue</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/blue</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/picture_orange_oval</item>
    </style>

</resources>
