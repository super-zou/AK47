<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/essence_tab_text_color_normal</item>
    </style>
    
    <!--+Begin: add for RadioButton color by zouhaichao, 2018.11.27-->
    <style name="MyRadioButton" parent="@android:style/Widget.Material.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">@color/color_light_grey</item>
        <item name="android:colorControlActivated">@color/color_blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--+End: add for checkbox color by zouhaichao, 2018.11.27-->
    
    <!--+Begin: add for edittext color by zouhaichao, 2019.1.12-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/line_border</item>
        <item name="colorControlActivated">@color/line_border</item>
    </style>
    <style name="EditTextCustom" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_dark_disabled</item>
        <item name="colorControlActivated">@color/color_dark_disabled</item>
    </style>
    <style name="HintAppearance" parent="TextAppearance.AppCompat">
         <item name="android:textColor">@color/white</item>
    </style>
     <style name="HintErrorAppearance" parent="TextAppearance.AppCompat">
         <item name="android:textColor">@color/color_red</item>
         <item name="textColorError">@color/color_red</item>
     </style>
     <style name="TextErrorAppearance" parent="TextAppearance.AppCompat">
         <item name="android:layout_marginLeft">16dp</item>
         <item name="android:textColor">@color/color_red</item>
         <item name="textColorError">@color/color_red</item> 
     </style>
    <!--+End: add for edittext color by zouhaichao, 2019.1.12-->

</resources>
