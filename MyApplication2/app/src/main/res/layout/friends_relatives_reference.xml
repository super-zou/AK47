            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="博学多才" />
                        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="热情开朗" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="诚实正直" />
                        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="幽默" />

        <TextView
            android:layout_width="wrap_content"
