<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chram_synthesized_results"
            android:layout_alignStart="@+id/charm_synthesized_rating"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="6dp"
            android:text="性格魅力" />
        <com.willy.ratingbar.ScaleRatingBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/charm_synthesized_rating"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="29dp"
            app:srb_clearRatingEnabled="false"
            app:srb_clickable="false"
            app:srb_drawableEmpty="@drawable/empty_rating_bar"
            app:srb_drawableFilled="@drawable/filled"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_rating="0"
            app:srb_scrollable="true"
            app:srb_starHeight="18dp"
            app:srb_starPadding="3dp"
            app:srb_starWidth="18dp"
            app:srb_stepSize="0.5">
        </com.willy.ratingbar.ScaleRatingBar>
        <TextView
            android:id="@+id/chram_synthesized_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/charm_synthesized_rating"
            android:layout_alignBottom="@+id/charm_synthesized_rating"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/charm_synthesized_rating"
            android:text="几星" />
        <TextView
            android:id="@+id/rating_member_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/chram_synthesized_results"
            android:layout_alignBottom="@+id/chram_synthesized_results"
            android:layout_marginStart="38dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/chram_synthesized_results"
            android:text="多少人评价" />
        
         <TextView
            android:id="@+id/rating_member_details"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rating_member_count"
            android:layout_alignBottom="@+id/rating_member_count"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/rating_member_count"
            android:text=">" />
        
    <com.willy.ratingbar.ScaleRatingBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/charm_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="57dp"
            android:layout_marginBottom="57dp"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="true"
            app:srb_drawableEmpty="@drawable/empty_rating_bar"
            app:srb_drawableFilled="@drawable/filled"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_rating="0"
            app:srb_scrollable="true"
            app:srb_starHeight="30dp"
            app:srb_starPadding="6dp"
            app:srb_starWidth="30dp"
            app:srb_stepSize="0.5">
    </com.willy.ratingbar.ScaleRatingBar>
    <TextView
            android:id="@+id/charm_rating"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/charm_rating_bar"
            android:layout_alignBottom="@+id/charm_rating_bar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="9dp"
            android:layout_toEndOf="@+id/charm_rating_bar"
            android:text="" />
     <TextView
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/charm_rating_bar"
            android:layout_alignEnd="@+id/charm_rating_bar"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="-26dp"
            android:layout_marginBottom="37dp"
            android:text="您认为该用户魅力如何？" />
    </RelativeLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="该用户还有哪些特质" />
    
            <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/male_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:flChildSpacing="8dp"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="英俊潇洒" />
