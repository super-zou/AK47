        android:text="魅力值"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="亲友推荐"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reference_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:text="好友印象"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
