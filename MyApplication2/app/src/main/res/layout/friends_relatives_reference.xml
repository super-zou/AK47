            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="成熟" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
