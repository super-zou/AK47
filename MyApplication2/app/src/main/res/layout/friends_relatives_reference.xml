            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="体贴" />
                        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="谦虚好学" />
    </com.nex3z.flowlayout.FlowLayout>
    
        <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/female_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:flChildSpacing="8dp"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="温柔体贴" />
                    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="可爱" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="善良贤惠" />
                    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="热情开朗" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="文静" />
