<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meet_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:elevation="1dp">
    
        <com.hetang.util.RoundImageView
        android:id="@+id/avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"/>
        
            <LinearLayout
        android:id="@+id/name_info"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar">
        <TextView
            android:id="@+id/name"
            android:text="@string/archive_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/self_condition"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:lineSpacingMultiplier="1.2"
        android:textStyle="normal|bold"
        android:textColor="@color/black"/>
        
        <LinearLayout
        android:id="@+id/education_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/self_condition">
        
        <TextView
            android:id="@+id/university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textColor="@color/black"/>
            
             <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:text="@string/dot_student"/>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/work_info"
        android:visibility="gone"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/education_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/position"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
             <TextView
            android:text="@string/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/industry"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/live_info"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/work_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/living_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"/>
            
             <TextView
            android:id="@+id/living"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="living"/>

        <TextView
            android:text="@string/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hometown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/behavior_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="right"
        android:padding="8dp">
        <TextView
            android:id="@+id/eye_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:text="@string/fa_eye"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
            
             <TextView
            android:id="@+id/visit_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/loved_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:text="@string/fa_heart_o"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />
            
            <TextView
            android:id="@+id/loved_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/thumbs_up_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:text="@string/fa_thumbs_O_up"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
            
             <TextView
            android:id="@+id/thumbs_up_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:text="@string/fa_comment_o"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
            
            <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>
</RelativeLayout>
