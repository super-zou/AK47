<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        android:id="@+id/custom_actionbar"
        layout="@layout/custom_actionbar_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAppearance="@style/CustomTextAppearance"
                android:text="@string/route_name" />
                <EditText
                android:id="@+id/route_name_edittext"
                style="@style/EditTextCustom"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/enter_route_name"
                android:textColor="@color/blue_dark"
                android:textCursorDrawable="@drawable/cursor_color"
                android:theme="@style/MyEditText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAppearance="@style/CustomTextAppearance"
                android:text="@string/route_introduction_edit" />
                
                <EditText
                android:id="@+id/route_introduction_edittext"
                style="@style/EditTextCustom"
                android:minLines="6"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/route_introduction_title"
                android:textColor="@color/blue_dark"
                android:background="@drawable/shape"
                android:textCursorDrawable="@drawable/cursor_color"
                android:theme="@style/MyEditText" />
                
                 <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAppearance="@style/CustomTextAppearance"
                android:text="@string/route_picture" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textAppearance="@style/CustomTextNoticeAppearance"
                android:text="@string/route_cover_picture" />
                
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_route_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="ifContentScrolls" />
            </RelativeLayout>
            
            <Button
                android:id="@+id/save_route"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_big_radius_primary"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
