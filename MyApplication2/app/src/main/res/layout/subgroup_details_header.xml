<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/subgroup_details_header">
    
    <com.hetang.util.RoundImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        
    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:typeface="sans"
        android:fontFamily="sans-serif"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo" />
        
    <TextView
        android:id="@+id/org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/color_dark_disabled"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/group_name" />

    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:textColor="@color/color_dark_disabled"
        app:layout_constraintStart_toEndOf="@+id/org"
        app:layout_constraintTop_toTopOf="@+id/org" />
    
    <com.hetang.util.RoundImageView
        android:id="@+id/leader_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/org" />

    <TextView
        android:id="@+id/leader_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
                      android:textColor="@color/blue_dark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toEndOf="@+id/leader_avatar"
        app:layout_constraintTop_toTopOf="@+id/leader_avatar" />

    <TextView
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/color_dark_disabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leader_name" />
    <Button
        android:id="@+id/follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/join"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leader_avatar" />
    
   <Button
        android:id="@+id/join"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:background="@drawable/btn_primary"
        android:text="@string/join_action"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/follow"
        app:layout_constraintTop_toTopOf="@+id/follow" />
    
    <View
        android:id="@+id/group_info_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_disabled"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/follow" />

    <TextView
        android:id="@+id/group_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="5"
        android:padding="10dp"
                      android:typeface="sans"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_info_divider" />

    <View
        android:id="@+id/group_interact_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_disabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_desc" />

    <TextView
        android:id="@+id/visit_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_dark_disabled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_interact_divider" />
    <TextView
        android:id="@+id/visit_activity_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:gravity="center"
        android:text="@string/dot"
        app:layout_constraintBottom_toBottomOf="@+id/visit_record"
        app:layout_constraintStart_toEndOf="@+id/visit_record"
        app:layout_constraintTop_toTopOf="@+id/visit_record" />
    <TextView
        android:id="@+id/activity_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_dark_disabled"
        app:layout_constraintBottom_toBottomOf="@+id/visit_record"
        app:layout_constraintStart_toEndOf="@+id/visit_activity_dot"
        app:layout_constraintTop_toTopOf="@+id/visit_record" />
    <TextView
        android:id="@+id/follow_activity_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:gravity="center"
        android:text="@string/dot"
        app:layout_constraintBottom_toBottomOf="@+id/visit_record"
        app:layout_constraintStart_toEndOf="@+id/activity_count"
        app:layout_constraintTop_toTopOf="@+id/visit_record" />
    <TextView
        android:id="@+id/follow_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_dark_disabled"
        app:layout_constraintBottom_toBottomOf="@+id/activity_count"
        app:layout_constraintStart_toEndOf="@+id/follow_activity_dot"
        app:layout_constraintTop_toTopOf="@+id/activity_count" />

    <TextView
        android:id="@+id/follow_member_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:gravity="center"
        android:text="@string/dot"
        app:layout_constraintBottom_toBottomOf="@+id/visit_record"
        app:layout_constraintStart_toEndOf="@+id/follow_count"
        app:layout_constraintTop_toTopOf="@+id/visit_record" />
    <TextView
        android:id="@+id/member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/follow_count"
        app:layout_constraintStart_toEndOf="@+id/follow_member_dot"
        app:layout_constraintTop_toTopOf="@+id/follow_count" />
</android.support.constraint.ConstraintLayout>
