<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:elevation="8dp"
    android:background="@color/white">
    
    <android.support.constraint.ConstraintLayout
        android:id="@+id/leader_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/leader_head_uri"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/leader_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/blue_dark"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/leader_head_uri"
        app:layout_constraintTop_toTopOf="@+id/leader_head_uri"/>
        
                <TextView
            android:id="@+id/name_divider_label"
            android:text="@string/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/leader_name"
            app:layout_constraintTop_toTopOf="@+id/leader_name"/>
        <TextView
            android:id="@+id/leader_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue"
            android:text="@string/group_leader"
            app:layout_constraintLeft_toRightOf="@+id/name_divider_label"
            app:layout_constraintTop_toTopOf="@+id/leader_name" />
        
        
    <TextView
            android:id="@+id/university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toRightOf="@+id/leader_label"
            app:layout_constraintTop_toTopOf="@+id/leader_label"/>
        
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/education_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/leader_head_uri"
        app:layout_constraintTop_toBottomOf="@+id/leader_name">
        <TextView
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="major"/>
        <TextView
            android:id="@+id/major_divider"
            android:text=" · "
            android:layout_toRightOf="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/degree"
            android:layout_toRightOf="@+id/major_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="degree"/>
    </RelativeLayout>
    
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/work_info"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/leader_head_uri"
        app:layout_constraintTop_toBottomOf="@+id/leader_name">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="title"/>
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/living"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="living"/>
    </LinearLayout>
        
    </android.support.constraint.ConstraintLayout>
    
    <View
        android:id="@+id/divider"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leader_profile"/>
    
  <android.support.constraint.ConstraintLayout
        android:id="@+id/group_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">
    <LinearLayout
        android:orientation="horizontal"
            android:id="@+id/member_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    
    <TextView
        android:id="@+id/member_count"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="20dp"
        android:textColor="@color/color_blue"
        android:background="@drawable/btn_transparent_default"
        android:gravity="center_vertical|center_horizontal"
        android:text="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/member_summary"
        app:layout_constraintTop_toBottomOf="@+id/member_summary"/>
        
    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_summary" />

    <TextView
        android:id="@+id/org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="org֯"
        app:layout_constraintLeft_toRightOf="@+id/group_name"
        app:layout_constraintTop_toTopOf="@+id/group_name" />
        
    <TextView
        android:id="@+id/profile"
        android:text="profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_name"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:text="created"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />
      
   </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
