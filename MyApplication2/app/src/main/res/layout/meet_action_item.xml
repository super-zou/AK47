<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/meet_action_item"
    android:layout_marginTop="3dp"
    android:background="@color/colorWhite">
    
        <include
        android:id="@+id/base_profile"
        layout="@layout/dynamics_action_author_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        
        
    <TextView
        android:visibility="gone"
        android:id="@+id/author_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_profile" />
        
            <android.support.constraint.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/related_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_content">
        
                <com.hetang.util.RoundImageView
            android:id="@+id/related_user_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            
                    <TextView
            android:id="@+id/related_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="name"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/related_user_avatar"
            app:layout_constraintTop_toTopOf="@+id/related_user_avatar" />
            
                    <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="level"
            app:layout_constraintStart_toEndOf="@+id/related_user_avatar"
            app:layout_constraintTop_toBottomOf="@+id/related_user_name" />
            
                    <TextView
            android:id="@+id/major"
            android:text="major"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/related_user_avatar"
            app:layout_constraintTop_toBottomOf="@+id/level"/>
            
                    <TextView
            android:id="@+id/orgnization"
            android:text="orgnization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/related_user_avatar"
            app:layout_constraintTop_toBottomOf="@+id/major"/>

    </android.support.constraint.ConstraintLayout>
    
     <include
        android:id="@+id/relate_content"
        android:visibility="visible"
        layout="@layout/meet_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_disabled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/related_user_profile" />
        
        <include
        android:visibility="gone"
        android:id="@+id/dynamics_content_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/dynamics_item_interact"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relate_content"/>

</android.support.constraint.ConstraintLayout>
