<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fill_meet_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tongmenhui.launchak47.meet.FillMeetInfoActivity"
    tools:showIn="@layout/activity_fill_meet_info"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="个人信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--sex-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="性别"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:text="男"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:text="女"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RadioGroup>
            </LinearLayout>
            <!--birthday-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="生日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_years"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/years"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/months"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/days"/>
            </LinearLayout>
            <!--height-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="身高"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/heights"/>
            </LinearLayout>
            <!--degree-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="学历"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/degrees"/>
            </LinearLayout>
            <!--lives-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="居住地"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/regions"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/provinces"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/cities"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/requirement"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="征友要求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--sex-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="性别"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:text="男"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:text="女"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RadioGroup>
            </LinearLayout>
            <!--age-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="年龄"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_require_age_lower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/ages"/>
                <TextView
                    android:text="～"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_require_age_upper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/ages"/>
            </LinearLayout>
            <!--height-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="身高"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_require_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/heights"/>
            </LinearLayout>
            <!--degree-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="学历"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_require_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/degrees"/>
            </LinearLayout>
            <!--lives-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="居住地"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_require_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/regions"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_require_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/provinces"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner_require_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/cities"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/prev"
            android:text="上一页"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/next"
            android:text="继续"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/done"
            android:text="完成"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

