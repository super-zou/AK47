<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:id="@+id/fill_meet_info">
        <include
        android:id="@+id/custom_actionbar"
        layout="@layout/custom_actionbar_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
        android:id="@+id/upload_picture"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_actionbar">
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/set_avatar"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_avatar"
            android:layout_marginTop="8dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/addimg_1x"/>
            <View
            android:layout_margin="32dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/add_more_picture"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:text="@string/fa_camera" />
        <TextView
            android:text="@string/set_more_picture"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
            <GridView
            android:id="@+id/more_picture"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>
    </LinearLayout>
    
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_picture">
        
        <TextView
            android:text="个人信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--birthday-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="生日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/years"/>
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/months"/>
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/days"/>
        </LinearLayout>
        <!--height-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="身高"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/heights"/>
        </LinearLayout>
        <!--degree-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="学历"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/degrees"/>
        </LinearLayout>
        <!--lives-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="居住地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/self_region"
                android:text="选择地区"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--hobbies-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="兴趣爱好" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:hint="输入兴趣"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/requirement"
        android:visibility="gone"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/self">
        <TextView
            android:text="征友要求"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <!--sex-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <RadioGroup
                android:id="@+id/require_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:text="男"
                    android:id="@+id/require_sex_male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:text="女"
                    android:id="@+id/require_sex_female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </LinearLayout>
        <!--age-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="年龄"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_require_age_lower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/ages"/>
            <TextView
                android:text="～"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_require_age_upper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/ages"/>
        </LinearLayout>
        <!--height-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="身高"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_require_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/heights"/>
        </LinearLayout>
        
        <!--degree-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="学历"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner_require_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:entries="@array/degrees"/>
        </LinearLayout>
        
        <!--lives-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="居住地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="选择地区"
                android:id="@+id/require_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        <EditText
            android:id="@+id/illustration"
            android:hint="hahaha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:gravity="top"
            android:minLines="2"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:background="@drawable/shape"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/prev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default"
            android:text="上一页"
            android:textColor="@color/background"
            android:visibility="visible" />
            
            <LinearLayout
            android:id="@+id/page_indicator"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/circle_o"
                android:textColor="@color/white" />
                
                 <TextView
                android:id="@+id/page_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/circle_o"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/page_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/circle_o"
                android:textColor="@color/white" />
        </LinearLayout>
        
        <Button
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default"
            android:text="继续"
            android:textColor="@color/background" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
            
