<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:id="@+id/meet_archive_profile">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/recommend_head_uri"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.android.volley.toolbox.NetworkImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/recommend_head_uri"
        app:layout_constraintStart_toStartOf="@+id/recommend_head_uri"
        app:layout_constraintTop_toBottomOf="@+id/recommend_head_uri" />

   <LinearLayout
        android:id="@+id/base_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name">
                <TextView
            android:id="@+id/age"
            android:text="age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
               <TextView
            android:id="@+id/height"
            android:text="height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
               <TextView
            android:id="@+id/sex"
            android:text="sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
               <TextView
            android:id="@+id/lives"
            android:text="lives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/base_profile"
        app:layout_constraintStart_toStartOf="@+id/base_profile"
        app:layout_constraintTop_toBottomOf="@+id/base_profile">
                    <TextView
            android:id="@+id/degree"
            android:text="degree"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                    <TextView
            android:id="@+id/major"
            android:text="major"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                    <TextView
            android:id="@+id/university"
            android:text="university"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/education"
        app:layout_constraintStart_toStartOf="@+id/education"
        app:layout_constraintTop_toBottomOf="@+id/education">
                    <TextView
            android:id="@+id/job"
            android:text="job"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                    <TextView
            android:id="@+id/company"
            android:text="company"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/partner_requirement_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/work"
        app:layout_constraintStart_toStartOf="@+id/work"
        app:layout_constraintTop_toBottomOf="@+id/work">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
                  android:alpha="0.7"
            android:layout_weight="6"
            android:background="#999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
                  android:alpha="0.8"
            android:text="期待"
            android:textColor="#999" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
                  android:alpha="0.7"
            android:layout_weight="6"
            android:background="#999" />
    </LinearLayout>
        <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/partner_requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/partner_requirement_label"
        app:layout_constraintStart_toStartOf="@+id/partner_requirement_label"
        app:layout_constraintTop_toBottomOf="@+id/partner_requirement_label">
                    <TextView
            android:id="@+id/age_require"
            android:text="age"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="，"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                    <TextView
            android:id="@+id/height_require"
            android:text="height"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="，"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                    <TextView
            android:id="@+id/degree_require"
            android:text="degree"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="，"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                    <TextView
            android:id="@+id/lives_require"
            android:text="lives"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sex_require"
            android:text="sex"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.nex3z.flowlayout.FlowLayout>

    <TextView
        android:id="@+id/illustration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="shuoming"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partner_requirement"
        tools:alpha="0.5" />

    <TextView
        android:id="@+id/eye_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/fa_eye"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintStart_toStartOf="@+id/illustration"
        app:layout_constraintTop_toBottomOf="@+id/illustration" />

    <TextView
        android:id="@+id/eye_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/eye_icon"
        app:layout_constraintStart_toEndOf="@+id/eye_icon"
        app:layout_constraintTop_toTopOf="@+id/eye_icon" />

    <TextView
        android:id="@+id/loved_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:text="@string/fa_heart"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="@+id/eye_icon"
        app:layout_constraintStart_toEndOf="@+id/eye_statistics"
        app:layout_constraintTop_toTopOf="@+id/eye_icon" />
    <TextView
        android:id="@+id/loved_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/eye_icon"
        app:layout_constraintStart_toEndOf="@+id/loved_icon"
        app:layout_constraintTop_toTopOf="@+id/eye_icon"
        android:textColor="@android:color/holo_red_dark" />
    <TextView
        android:id="@+id/thumbs_up_icon"
        android:text="@string/fa_thumbs_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingLeft="18dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/loved_statistics"
        app:layout_constraintBottom_toBottomOf="@+id/eye_icon"
        app:layout_constraintTop_toTopOf="@+id/eye_icon"
        />
    <TextView
        android:id="@+id/thumbs_up_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/thumbs_up_icon"
        app:layout_constraintBottom_toBottomOf="@+id/eye_icon"
        app:layout_constraintTop_toTopOf="@+id/eye_icon"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        android:text="添加联系人"
        android:textColor="@color/colorWhite"
        android:background="@color/color_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/illustration" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorWhite"
        android:background="@color/color_green"
        android:text="聊天"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/button" />


</android.support.constraint.ConstraintLayout>
