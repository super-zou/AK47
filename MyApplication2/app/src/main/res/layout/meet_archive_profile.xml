<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fontFamily="serif"
    android:typeface="serif"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:background="@color/background"
    android:id="@+id/meet_archive_profile">

    <ImageView
        android:id="@+id/recommend_head_uri"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        </ImageView>

    <TextView
        android:id="@+id/name"
        android:text="name"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/recommend_head_uri"
        app:layout_constraintStart_toStartOf="@+id/recommend_head_uri"
        app:layout_constraintTop_toBottomOf="@+id/recommend_head_uri" />

   <LinearLayout
        android:id="@+id/base_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name">
        <TextView
            android:id="@+id/age"
            android:text="age"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/height"
            android:text="height"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sex"
            android:text="sex"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/education"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/base_profile"
        app:layout_constraintStart_toStartOf="@+id/base_profile"
        app:layout_constraintTop_toBottomOf="@+id/base_profile">
        <TextView
            android:id="@+id/degree"
            android:text="degree"
            android:textColor="@color/white"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/major"
            android:text="major"
            android:textColor="@color/white"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/university"
            android:text="university"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/work"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/education"
        app:layout_constraintStart_toStartOf="@+id/education"
        app:layout_constraintTop_toBottomOf="@+id/education">
        <TextView
            android:id="@+id/job"
            android:text="job"
            android:textColor="@color/white"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="·"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/company"
            android:text="company"
            android:textColor="@color/white"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/living_wrap"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/work"
        app:layout_constraintStart_toStartOf="@+id/work"
        app:layout_constraintTop_toBottomOf="@+id/work">
        <TextView
            android:text="@string/location"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/living"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/profile_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:text="详细资料  >"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/living_wrap"
        app:layout_constraintStart_toStartOf="@+id/living_wrap"
        app:layout_constraintTop_toBottomOf="@+id/living_wrap" />
    
    <LinearLayout
        android:id="@+id/partner_requirement_label"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/profile_detail"
        app:layout_constraintStart_toStartOf="@+id/profile_detail"
        app:layout_constraintTop_toBottomOf="@+id/profile_detail">

        <TextView
            android:text="@string/fa_heart"
            android:textColor="@color/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dp"
            android:alpha="0.8"
            android:text="期待一位"
            android:textColor="#999" />

    </LinearLayout>
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/partner_requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="@+id/partner_requirement_label"
        app:layout_constraintStart_toStartOf="@+id/partner_requirement_label"
        app:layout_constraintTop_toBottomOf="@+id/partner_requirement_label">
        <TextView
            android:id="@+id/age_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/label_btn_shape"
            android:padding="8dp"
            android:text="age"
            android:textColor="@color/color_blue" />
        <TextView
            android:id="@+id/height_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/label_btn_shape"
            android:padding="8dp"
            android:text="height"
            android:textColor="@color/color_blue" />
        <TextView
            android:id="@+id/degree_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/label_btn_shape"
            android:padding="8dp"
            android:text="degree"
            android:textColor="@color/color_blue" />
        <TextView
            android:id="@+id/sex_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/label_btn_shape"
            android:padding="8dp"
            android:text="sex"
            android:textColor="@color/color_blue" />
        <TextView
            android:id="@+id/lives_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/label_btn_shape"
            android:padding="8dp"
            android:text="lives"
            android:textColor="@color/color_blue" />

    </com.nex3z.flowlayout.FlowLayout>
    
    <LinearLayout
        android:id="@+id/interaction_wrap"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partner_requirement">
        <Button
            android:id="@+id/contacts"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_stress"
            android:text="+朋友"
            android:elevation="5dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/follow"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_default"
            android:text="+关注"
            android:elevation="5dp"
            android:textColor="@color/color_blue" />


        <Button
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/btn_primary"
            android:text="聊天"
            android:elevation="5dp"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/follow_statistics_wrap"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interaction_wrap">

        <LinearLayout
            android:id="@+id/followed_count_wrap"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/followed_count_title"
                android:text="被关注"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:id="@+id/followed_count"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="|"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/following_count_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/following_count_title"
                android:text="关注的"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:id="@+id/following_count"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/praise_statistics_wrap"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/follow_statistics_wrap">
        <LinearLayout
            android:id="@+id/praised_count_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/praised_count_title"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被赞" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/praised_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="|" />

        <LinearLayout
            android:id="@+id/praise_count_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/praise_count_title"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞过" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/praise_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/love_statistics_wrap"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/praise_statistics_wrap">
        <LinearLayout
            android:id="@+id/loved_count_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/loved_count_title"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喜欢我的" />
            <TextView
                android:id="@+id/loved_count"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="|" />

        <LinearLayout
            android:id="@+id/love_count_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/love_count_title"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我喜欢的" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/love_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/interaction_statistics_wrap"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/love_statistics_wrap">
        
        <TextView
            android:id="@+id/eye_icon"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_eye" />

        <TextView
            android:id="@+id/eye_statistics"
            android:textSize="18sp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/loved_icon"
            android:textSize="20sp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/fa_heart"
            android:textColor="@drawable/love_selector" />

        <TextView
            android:id="@+id/loved_statistics"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/praised_icon"
            android:elevation="8dp"
            android:textSize="20sp"
            android:text="@string/fa_thumbs_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/praise_selector"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/praised_statistics"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_blue" />
    </LinearLayout>
    
        <LinearLayout
        android:orientation="vertical"
        android:id="@+id/illustration_wrap"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interaction_statistics_wrap">
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/illustration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:text="hahahahah"
            android:textColor="@color/color_blue"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
