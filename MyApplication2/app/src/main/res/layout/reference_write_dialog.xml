<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/write_reference_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="5dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:text="×"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/write_reference_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="105dp"
            android:text="为好友写推荐信"
            android:textColor="@color/color_blue"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            android:text="@string/done"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="选择你们的关系："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_reference_wrap" />

    <com.hetang.util.MyRadioGroup
        android:id="@+id/relation_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <RadioButton
            android:id="@+id/classmate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/classmate"
            android:textColor="@color/color_blue"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/roommate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/roommate"
            android:textColor="@color/color_blue"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/friend"
            android:textColor="@color/color_blue"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/colleague"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/colleague"
            android:textColor="@color/color_blue"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/schoolmate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/schoolmate"
            android:textColor="@color/color_blue"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/relative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/relative"
            android:textColor="@color/color_blue"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton" />
    </com.hetang.util.MyRadioGroup>

    <EditText
        android:id="@+id/reference_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/label_btn_shape_no_border"
        android:hint="写下你的推荐，会让好友获得更多关注"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.2"
        android:padding="3dp"
        android:textColor="@color/color_blue"
        android:textCursorDrawable="@null"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/relation_radiogroup" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#3799f4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reference_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
