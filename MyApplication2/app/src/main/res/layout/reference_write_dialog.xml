<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <RelativeLayout
            android:id="@+id/write_reference_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="8dp"
            android:background="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
               <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:textSize="28dp"
                    android:text="×" />
                <TextView
                    android:id="@+id/write_reference_title"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="105dp"
                    android:text="为好友写推荐信"
                    android:textColor="@color/color_blue" />
                 <TextView
                    android:id="@+id/save"
                    android:enabled="false"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:text="@string/done" />
        </RelativeLayout>
        <TextView
            android:id="@+id/title"
            android:text="选择你们的关系："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_reference_wrap"/>
        <com.tongmenhui.launchak47.util.MyRadioGroup
            android:id="@+id/relation_radiogroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" >
               <RadioButton
                    android:id="@+id/classmate"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_blue"
                    android:theme="@style/MyRadioButton"
                    android:text="@string/classmate"/>
                <RadioButton
                    android:id="@+id/roommate"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_blue"
                    android:theme="@style/MyRadioButton"
                    android:text="@string/roommate"/>
               <RadioButton
                    android:id="@+id/friend"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:textColor="@color/color_blue"
                    android:theme="@style/MyRadioButton"
                    android:layout_height="wrap_content"
                    android:text="@string/friend"/>
                <RadioButton
                    android:id="@+id/colleague"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/colleague"
                    android:textSize="16sp"
                    android:textColor="@color/color_blue"
                    android:theme="@style/MyRadioButton"/>
                                <RadioButton
                    android:id="@+id/schoolmate"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:textColor="@color/color_blue"
                    android:theme="@style/MyRadioButton"
                    android:layout_height="wrap_content"
                    android:text="@string/schoolmate"/>
                <RadioButton
                    android:id="@+id/relative"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:textColor="@color/color_blue"
                    android:theme="@style/MyRadioButton"
                    android:layout_height="wrap_content"
                    android:text="@string/relative"/>
        </com.tongmenhui.launchak47.util.MyRadioGroup>
        <EditText
            android:id="@+id/reference_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/label_btn_shape_no_border"
            android:hint="写下你的推荐，会让好友获得更多关注"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.2"
            android:padding="3dp"
            android:textColor="@color/color_blue"
            android:textCursorDrawable="@null"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/relation_radiogroup" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3799f4"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reference_edit_text" />

</android.support.constraint.ConstraintLayout>
