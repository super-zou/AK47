<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reference_item">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/referee_head_uri"
        android:layout_width="31dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.android.volley.toolbox.NetworkImageView>

    <TextView
        android:id="@+id/referee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/referee_profile"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:text="name"
        app:layout_constraintStart_toEndOf="@+id/referee_head_uri"
        app:layout_constraintTop_toTopOf="@+id/referee_head_uri" />
     <TextView
        android:id="@+id/relation"
        android:text="relation"
        android:textColor="@color/color_blue"
        android:padding="3dp"
        android:background="@drawable/btn_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/referee_name"
        app:layout_constraintStart_toEndOf="@+id/referee_name"/>
    
    <TextView
        android:id="@+id/referee_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referee_name"
        android:layout_alignStart="@+id/reference_content"
        android:layout_marginTop="12dp"
        android:text="推荐人信息"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/referee_name"
        app:layout_constraintTop_toBottomOf="@+id/referee_name" />

    <TextView
        android:id="@+id/reference_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referee_head_uri"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/referee_head_uri"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.2"
        android:paddingRight="8dp"
        android:text="推荐内容"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/referee_profile" />
    

    <TextView
        android:id="@+id/thumbs_up_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/comment_icon"
        android:layout_alignBottom="@+id/comment_icon"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/comment_icon"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:text="@string/fa_thumbs_up"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/comment_icon"
        app:layout_constraintTop_toBottomOf="@+id/reference_content" />

    <TextView
        android:id="@+id/comment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reference_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:text="@string/fa_comment"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/thumbs_up_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/thumbs_up_icon" />

</android.support.constraint.ConstraintLayout>
